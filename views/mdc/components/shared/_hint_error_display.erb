<div class="mdc-text-field-helper-line">
  <div id="<%= comp.id %>-input-helper-text"
       class="mdc-text-field-helper-text mdc-text-field-helper-text--persistent<%= ' v-hidden' unless comp.hint %>"
       role="alert"
       aria-live="polite"
       <% if comp.validation_error %>data-validation-error="<%= comp.validation_error %>"<% end %>>
      <%= comp.hint %>
  </div>
  <% if comp.max_length %>
    <div class="mdc-text-field-character-counter"></div>
  <% end %>
</div>