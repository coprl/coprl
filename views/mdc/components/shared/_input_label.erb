<% has_value = comp.respond_to?(:value) && !eq(comp.value, '') %>
<div class="mdc-notched-outline">
  <div class="mdc-notched-outline__leading"></div>
  <div class="mdc-notched-outline__notch">
    <label for="<%= comp.id %>-input" class="mdc-floating-label <% if has_value %>mdc-floating-label--float-above<% end %>"><%= expand_text(comp.label) %></label>
  </div>
  <div class="mdc-notched-outline__trailing"></div>
</div>
